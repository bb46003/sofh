<div class="second-row">
    <div class="move-elements">
        <div class="trigers-sheet-limited"> 
           <h2 class="move_type trigger-label ">{{localize "sofh.item.trigerlabel"}}</h2>       
            {{injectHtml system.triggers}}
        </div>     
        <div class="description-sheet-limited"> 
           <h2 class="move_type description-label ">{{localize "sofh.item.descriptionlabel"}}</h2>       
            {{#injectHtml system.description}}{{/injectHtml}}
        </div>
        {{#if system.housequestion}}
        <div class="move-is-ralted-to-house-guestion">
            {{localize "sofh.ui.move.isRaltedToHouse"}}
        </div>    
        {{/if}}
        {{#if (eq system.havequestion true)}} 
            <div class="moves-question">
                <h2 class="move_type description-label ">{{localize "sofh.item.question"}}</h2>
                {{#each system.question as |question index|}}
                <div class="question-sheet">
                    <textarea class="question" name="system.question.{{@index}}.description" disabled>{{question.description}}</textarea>
                    <select id="question-type" name="system.question.{{@index}}.impact" disabled>
                        <option value="true" {{#if (eq question.impact "true")}}selected{{/if}}>{{localize 'sofh.ui.rolldialog.positiveOption'}}</option>
                        <option value="false" {{#if (eq question.impact "false")}}selected{{/if}}>{{localize 'sofh.ui.rolldialog.negativeOption'}}</option>
                    </select>
                </div>
                {{/each}}
            </div>
       {{/if}}
        {{#if (eq system.realtedtoothermoves true)}} 
            <h2 class="move_type description-label ">{{localize "sofh.item.realtedtoothermoves"}}</h2>
            <div class="moves-realtedtoothermoves">
                <textarea class="relatedmoves" name="system.relatedmoves" disabled>{{system.relatedmoves}}</textarea>
            </div>
        {{/if}}
        {{#if (eq system.isrolled true)}} 
        <h2 class="move_type description-label ">{{localize "sofh.item.isrolled"}}</h2>
<div class="moves-isrolled">
  {{#if (eq system.result12 true)}}
    <div class="row">
      <label for="above12">{{localize 'sofh.ui.move.resultAbove12'}}</label>
      {{editor system.above12 target="system.above12" engine="prosemirror" button=false owner=owner editable=false class="roll-resoult-above12"}}
    </div>
  {{/if}}

  <div class="row">
    <label for="above10">{{localize 'sofh.ui.move.resultAbove10'}}</label>
    {{editor system.above10 target="system.above10" engine="prosemirror" button=false owner=owner editable=false class="roll-resoult-above10"}}
  </div>

  <div class="row">
    <label for="7to9">{{localize 'sofh.ui.move.result7to9'}}</label>
    {{editor system.7to9 target="system.7to9" engine="prosemirror" button=false owner=owner editable=false class="roll-resoult-7to9"}}
  </div>

  <div class="row">
    <label for="below7">{{localize 'sofh.ui.move.resultBelow7'}}</label>
    {{editor system.below7 target="system.below7" engine="prosemirror" button=false owner=owner editable=false class="roll-resoult-below7"}}
  </div>
</div>

        {{/if}}
    </div>
</div>

